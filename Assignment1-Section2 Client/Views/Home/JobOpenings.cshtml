@model IEnumerable<Assignment1_Section2_Client.Models.JobOpenings>

@{
    ViewBag.Title = "JobOpenings";
}

<h2>JobOpenings</h2>

<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.role)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.opening)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
